<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/links/edit-register/{{users.id}}" method="post">
                        <div class="for-group">
                            <label for="">Nombre</label>
                            <input class="form-control" type="text" name="nombre" value="{{users.nombre}}" autofocus>
                        </div>
                        <div class="for-group" >
                            <label for="">Apellidos</label>
                            <input class="form-control" type="text" name="apellidos" value="{{users.apellidos}}">
                        </div>
                        <div class="for-group">
                            <label for="">E-mail</label>
                            <input class="form-control" type="text" name="email" value="{{users.email}}" >
                        </div>
                        <div class="for-group">
                            <label for="">Password</label>
                            <input class="form-control" type="password" name="password"  placeholder="Cambiar contraseÃ±a">
                        </div>
                        <div class="form-group">
                            {{#each usuarios}}
                            <a href="/links/edit-register/{{id}}" class="btn btn-primary btn-block"> Editar</a>
                            {{/each}}
                            <button class="btn btn-success btn-block">
                                Guardar cambios
                            </button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>